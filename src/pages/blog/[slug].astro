---
import { getCollection, render } from 'astro:content'
import readingTime from 'reading-time'
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
	const posts = await getCollection('posts')
  return posts.map(p => ({
    params: { slug: p.data.slug },
    props: { post: p },
  }));
}

const { post } = Astro.props
const { title, slug, description, publishDate, label } = post.data;
const readingTimeEstimate = readingTime(post.body).text
const permalink = `${Astro.site.href}blog/${slug}`;
const { Content } = await render(post)

// build prev/next navigation (natural slug order: chapter1-page1, chapter1-page2...)
const allPosts = await getCollection('posts');
const sorted = allPosts.sort((a, b) =>
  String(a.data.slug).localeCompare(String(b.data.slug), undefined, { numeric: true, sensitivity: 'base' })
);
const index = sorted.findIndex(p => p.data.slug === slug);
const prev = index > 0 ? sorted[index - 1] : null;
const next = index >= 0 && index < sorted.length - 1 ? sorted[index + 1] : null;
---

<BaseLayout title={title} description={description} permalink={permalink} current="blog">
  <header>
    <p>{publishDate} ~ {readingTimeEstimate}</p>
    <h1>{title}</h1>
    <div class="post-meta">
      <span class="post-description">{description}</span>
    </div>
    <hr />
  </header>
  <div class="container">
    <article class="content">
      <Content />
    </article>
    <hr />
    <nav class="post-nav" aria-label="Post navigation">
      {prev ? <a class="prev" href={`/blog/${prev.data.slug}`}>← {prev.data.title}</a> : <span />}
      <a class="home" href="/ChristmasTower/">Home</a>
      {next ? <a class="next" href={`/blog/${next.data.slug}`}>{next.data.title} →</a> : <span />}
    </nav>
  </div>
</BaseLayout>

<style>
  header {
    text-align: center;
  }

  header h1 {
    margin-bottom: 0.7em;
  }

  header p {
    color: var(--text-secondary);
    text-transform: uppercase;
    font-family: var(--font-family-sans);
    font-weight: 600;
  }

  header hr {
    min-width: 100px;
    width: 30%;
  }

  .post-meta {
    display: flex;
    justify-content: center;
    gap: 1.5em;
    margin-bottom: 1em;
    font-family: var(--font-family-sans);
    font-size: 1.1em;
    color: var(--text-secondary);
  }

  .post-label {
    background: var(--primary-color);
    color: #fff;
    border-radius: 6px;
    padding: 0.2em 0.8em;
    font-weight: 600;
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }

  .post-description {
    font-style: italic;
  }

  .post-nav {
    display: flex;
    justify-content: space-between;
    gap: 1em;
    align-items: center;
    margin: 2em 0 4em 0;
    font-weight: 700;
  }

  .post-nav a {
    color: var(--primary-color);
    text-decoration: none;
    padding: 0.4em 0.6em;
  }

  .post-nav .home {
    margin: 0 auto;
  }
</style>
