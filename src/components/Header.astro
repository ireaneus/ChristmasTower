---
import Logo from './Logo.astro'
import Nav from './Nav.astro'

const { current = '' } = Astro.props;
const isBlog = current === 'blog';
---

<style>
  header {
    display: flex;
    margin: 0 auto;
    max-width: 1400px;
    padding: 2em;
    width: 100%;
  }

  @media screen and (max-width: 520px) {
    header {
      padding: 2em 0;
    }
  }
</style>

{isBlog ? <div class="top-hover-zone" aria-hidden="true"></div> : null}

<header class={isBlog ? 'blog-hidden' : ''}>
  <Logo />
  <Nav current={current} />
</header>

<style>
  .top-hover-zone {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: 8px;
    z-index: 999;
    background: transparent;
  }

  header.blog-hidden {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    transform: translateY(-100%);
    transition: transform .25s ease, opacity .25s ease;
    opacity: 0;
    z-index: 1000;
    background: var(--bg);
  }

  .top-hover-zone:hover + header.blog-hidden,
  header.blog-hidden:hover {
    transform: translateY(0);
    opacity: 1;
  }

</style>
