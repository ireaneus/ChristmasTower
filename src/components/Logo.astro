---
const BASE = import.meta.env.BASE_URL;
---

<style>
  img {
    display: block;
    width: 75px;
  }

  @media screen and (max-width: 520px) {
    img {
      display: none;
    }
  }
</style>

<a href={BASE}>
  <img alt="Blog Logo" src={`${BASE}/assets/logo.webp`} width="75" height="50" />
</a>
